{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "compiled/client/static",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/client/*"],
      "@common/*": ["src/common/*"],
      "@server/*": ["src/server/*"],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/client/static/**/*"
  ],
  "exclude": [
    "/dist/**/*",
    "/compiled/**/*"
  ]
}