{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "compiled",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/client/*"],
      "@common/*": ["src/common/*"],
      "@server/*": ["src/server/*"],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client/static/**/*",
    "/dist/**/*",
    "/compiled/**/*"
  ]
}